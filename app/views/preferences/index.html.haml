%center
  -begin 
    .alert.alert-info
      %b Your Current Settings:
      %p 
        %b Class Time: 
        = current_user.preferences.class_time.humanize
      %p 
        %b Lunch Time:
        = current_user.preferences.lunch_time.localtime.strftime("%I:%M %P")
      %p 
        %b Work Times
        - current_user.preferences.workdays.split("|").each do |t|
          %p 
            - t.split(",").each do |d|
              = d.humanize
  -rescue; end;
    
  #step1
    %h1 When do you like to take your classes?
    %p 
      Are you a morning, afternoon, or evening person?
    %table.preferences
      %tr
        %td#choose_morning
          = image_tag "weather_fog.png", :height => "96" 
          = link_to "Morning", "#", :class => "btn", :id => "t_morning" 
        %td#choose_afternoon
          = image_tag "weather_clear.png", :height => "96"  
          = link_to "Afternoon", "#", :class => "btn btn-primary", :id => "t_afternoon" 
        %td#choose_evening
          = image_tag "moon.png", :height => "96" 
          = link_to "Evening", "#", :class => "btn btn-success", :id => "t_evening" 
    #time_choice
    
    %br 

    = link_to "Next >", "#", :class => "btn btn-success", :id => "btn_step1" 

  #step2
    %h1 When do you want to eat lunch?
    %p 
      We'll pick a time with your friends to eat lunch
    = time_select("lunch", "time", {}, {}) 
    %br 
    %br
    = link_to "< Back", "#", :class => "btn btn-error", :id => "btn_step2_bk" 
    = link_to "Next >", "#", :class => "btn btn-success", :id => "btn_step2"     


  #step3
    %h1 When do you work?
    %p
      We'll plan around your work schedule, just click "Yes" on the days you work to fill in the time

    %table.time_preferences
      %thead
        %th Monday
        %th Tuesday
        %th Wednesday
        %th thursday
        %th Friday

      %tbody
        %tr
          - %w{monday tuesday wednesday thursday friday}.each do |d|
            %td{:id => "td_time_#{d}"}
              = link_to "Yes", "#", :class => "btn primary", :id => "yes_#{d}", :onclick => "show_worktime('#{d}')" 
              %div.hidden{:id => "hidden_#{d}"}
                %b Start Time:
                %br
                = time_select("work_time", "#{d}_start") 
                %br 
                %br
                %b End Time:
                %br
                = time_select("work_time", "#{d}_end") 
                %br
                = link_to "Cancel", "#", :class => "btn btn-error", :id => "no_#{d}"  

    %br 
    = link_to "< Back", "#", :class => "btn btn-error", :id => "btn_step3_bk" 
    = link_to "Save Preferences", "#", :class => "btn btn-success", :id => "save_preferences" 
