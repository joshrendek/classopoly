- if !current_user
  %center
    .logo 
      Classopoly
      %br
      %small
        Social Class Scheduling

  .container
    .row
      .span6
        %h1
          %center 
            Get started in 3 easy steps.
        .span4.welcomebox
          .row
            .span1
              .title Step 1
            .span3
              =link_to "Login With Facebook",  user_omniauth_authorize_path(:facebook), :class => "btn btn-primary btn-large span3"
        .span4.welcomebox
          .row
            .span1
              .title Step 2
            .span3
              =link_to "Invite Your Friends", "#", :class => "btn btn-success btn-large span3"
        .span4.welcomebox
          .row
            .span1
              .title Step 3
            .span3
              =link_to "Plan Your Courses", "#", :class => "btn btn-info btn-large span3"
      .span6
        %h1 
          %center 
            Watch our Getting Started Video
          .thumbnail
            %img{:src => "http://placehold.it/460x368"}
  - if current_user
    - if current_user.user_courses.size > 0
      %h3
        =link_to "Find courses that I can take", generate_course_list_user_courses_path
    - else
      %h3
        =link_to "You need to add some courses to take", user_courses_path

  - if current_user
    %div.row
      .span4
        %h3 Friends using Classopoly
        - @friends.each do |f|
          %div
            =image_tag "https://graph.facebook.com/#{f.facebook_friend_id}/picture", :size => "24x24", :style => "float: left;"
            =f.name
            %div
              %p=f.friend.user_courses.collect{|c|c.tag}.join(', ')
          .clear
          %br 

      .span6
